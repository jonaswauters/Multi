<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <title>Barcode Vergelijker</title>
  <style>
    body {
      font-family: sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 50px;
    }

    input {
      font-size: 1.5em;
      padding: 10px;
      margin: 10px;
      width: 300px;
      text-align: center;
    }

    .lampje {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin-top: 20px;
      background-color: gray;
      border: 2px solid #333;
    }
  </style>
</head>
<body>

  <h1>Barcode Vergelijker</h1>

  <input id="barcode1" type="text" placeholder="Scan eerste barcode" autofocus>
  <input id="barcode2" type="text" placeholder="Scan tweede barcode">

  <div id="lampje" class="lampje"></div>

  <script>
    const barcode1 = document.getElementById('barcode1');
    const barcode2 = document.getElementById('barcode2');
    const lampje = document.getElementById('lampje');

    function vergelijkBarcodes() {
      const b1 = barcode1.value.trim().slice(0, 9);
      const b2 = barcode2.value.trim().slice(0, 9);

      if (b1.length < 9 || b2.length < 9) {
        lampje.style.backgroundColor = 'gray';
        return;
      }

      if (b1 === b2) {
        lampje.style.backgroundColor = 'green';
      } else {
        lampje.style.backgroundColor = 'red';
      }
    }

    barcode1.addEventListener('input', vergelijkBarcodes);
    barcode2.addEventListener('input', vergelijkBarcodes);
  </script>

</body>
</html>
